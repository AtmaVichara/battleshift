<%= form_for register_path do |f| %>
 <%= f.label :email %>
 <%= f.text_field :email %>

 <%= f.label :name %>
 <%= f.text_field :name %>

 <%= f.label :phone_number %>
 <%= f.text_field :phone_number %>

 <%= f.label :password %>
 <%= f.password_field :password %>

 <%= f.label :password_confirmation %>
 <%= f.password_field :password_confirmation %>

 <%= f.submit "Register Account" %>
<% end %>
